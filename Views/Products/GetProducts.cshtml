@using XceedTask.Models
@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}

<a asp-action="AddProduct" class="btn btn-primary btn-lg">
    <i class="bi bi-plus-circle-dotted"></i>
    New Product
</a>


<table class="table table-bordered border-primary mt-5">
    <thead>
        <tr class="border-primary">
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">CreationDate</th>
            <th scope="col">StartDate</th>
            <th scope="col">Duration</th>
            <th scope="col">User</th>
            <th scope="col">Category</th>
            <th scope="col">Update</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var product in Model)
        {
            <tr class="border border-primary">
                
                <td>
                    <div class="d-flex">
                        <div class="d-flex flex-column justify-content-center">
                            <p>@product.Name</p>
                        </div>
                    </div>
                </td>

                <td>
                    <div class="d-flex">
                        <div class="d-flex flex-column justify-content-center">
                            <p>@product.Price</p>
                        </div>
                    </div>
                </td>

                <td>
                    <div class="d-flex">
                        <div class="d-flex flex-column justify-content-center">
                            <p>@product.CreationDate</p>
                        </div>
                    </div>
                </td>

                <td>
                    <div class="d-flex">
                        <div class="d-flex flex-column justify-content-center">
                            <p>@product.StartDate</p>
                        </div>
                    </div>
                </td>

                <td>
                    <div class="d-flex">
                        <div class="d-flex flex-column justify-content-center">
                            <p>@product.Duration</p>
                        </div>
                    </div>
                </td>

                <td>
                    <div class="d-flex">
                        <div class="d-flex flex-column justify-content-center">
                            <p>@product.User.UserName</p>
                        </div>
                    </div>
                </td>

                <td>
                    <div class="d-flex">
                        <div class="d-flex flex-column justify-content-center">
                            <p>@product.Category.Name</p>
                        </div>
                    </div>
                </td>

                <td>
                    <div class="d-flex">
                        <a asp-action="UpdateProduct" asp-controller="Products" asp-route-id="@product.Id" class="btn btn-primary rounded rounded-3 ">
                            <i class="bi bi-pencil-fill">Update</i>
                        </a>
                    </div>
                    
                </td>
                <td>
                    <div class="d-flex">
                        <a asp-action="Delete" asp-controller="Products" asp-route-id="@product.Id" class="btn btn-danger rounded rounded-3">
                            <i class="bi bi-trash3">Remove</i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>